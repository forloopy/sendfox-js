{
  "compilerOptions": {
    "outDir": "dist",               // Output directory for compiled files
    "module": "Node16",             // Use Node.js ES module system
    "target": "ES6",                // Target modern JavaScript (ES6)
    "moduleResolution": "Node16",   // Ensure proper resolution for Node.js ES modules
    "declaration": true,            // Generate .d.ts files for type declarations
    "declarationMap": true,         // Generate source maps for .d.ts files
    "sourceMap": true,              // Generate source maps for debugging
    "strict": true,                 // Enable all strict type-checking options
    "esModuleInterop": true,        // Allow interoperability between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "resolveJsonModule": true,      // Allow importing JSON modules
    "allowSyntheticDefaultImports": true, // Simplify default imports
    "skipLibCheck": true            // Skip type checking for declaration files
  },
  "include": ["src/**/*"],          // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and output dist folder
}
